.rates5__tabs
	margin-top 40px
	display flex

	@media(min-width desktop)
		margin-top 100px

.rates5__tab
	border-radius 40px
	border 1px solid currentColor
	padding 3px 9px
	transition 0.3s
	opacity 0.5
	cursor pointer

	@media(min-width desktop)
		border-radius 50px

	& + &
		margin-left 12px

	&--active
		opacity 1

.rates5__list
	margin-top 40px
	margin-bottom -56px

	@media(min-width desktop)
		margin-bottom 0

.rates5__item
	border-top 1px solid currentColor
	padding-top 12px
	margin-left -24px
	margin-right -24px
	padding-left 24px
	padding-right 24px
	margin-bottom 56px
	display flex
	flex-direction column

	@media(min-width desktop)
		margin 0
		padding 16px 0 52px

.rates5__itemHeading
	margin 0

.rates5__itemDesc
	margin-top 10px

	@media(min-width desktop)
		margin-top 0

.rates5__itemList
	list-style none
	margin 16px 0 0
	border-top 1px solid currentColor
	padding 20px 0 0
	order 1

	@media(min-width desktop)
		margin-top 0
		border-top none
		padding-top 0
		order initial

.rates5__itemListItem
	position relative
	padding-left 12px

	&::before
		content ''
		position absolute
		left 0
		top 7px
		width 3px
		height 3px
		border-radius 100%
		background currentColor

	& + &
		margin-top 8px

.rates5__wrapper
	display flex
	justify-content space-between
	align-items center
	margin-top 28px

	@media(min-width desktop)
		margin-top 24px
		padding-top 16px
		border-top 1px solid currentColor

.rates5__itemLink
	margin-left 20px
	width 20px
	height 20px
	text-decoration none
	transition 0.3s
	flex-shrink 0

	@media(min-width desktop)
		width 24px
		height 24px

	&:hover
		opacity 0.5

	svg
		width 100%
		height 100%


@media(min-width desktop)
	.rates5__item
		display grid
		align-items baseline
		grid-template-columns 1fr 1fr 1fr
		grid-template-rows min-content min-content min-content
		grid-column-gap 48px

	.rates5__itemHeading
		grid-column 1/2
		grid-row 1/4

	.rates5__itemDesc
		grid-column 2/3
		grid-row 1/4

	.rates5__itemList
		grid-column 3/4
		grid-row 1/2

	.rates5__wrapper
		grid-column 3/4
		grid-row 2/3

.rates5__itemListHeading
	display none
