.gallery3__images
	margin 0 0 -12px
	padding 0
	list-style none

	@media(min-width tablet)
		display flex
		flex-wrap wrap

	@media(min-width desktop)
		margin-bottom -20px

.gallery3__image
	margin-bottom 12px

	@media(min-width tablet)
		width calc((100% - 16px) / 2)
		margin-left 16px

		.gallery3__photo, .gallery3__video
			height 209px

		&:nth-child(odd)
			margin-left 0

		&:nth-child(8n+4), &:nth-child(8n+7)
			width 31.7%

			.gallery3__photo, .gallery3__video
				height 218px

		&:nth-child(8n+8), &:nth-child(8n+3)
			width 65.92%

			.gallery3__photo, .gallery3__video
				height 218px

	@media(min-width desktop)
		margin-bottom 20px

		.gallery3__photo, .gallery3__video
			height 370px

		&:nth-child(8n+4), &:nth-child(8n+8),
		&:nth-child(8n+7), &:nth-child(8n+3)
			.gallery3__photo, .gallery3__video
				height 387px

.gallery3__photo, .gallery3__video
	display block
	object-fit cover
	width 100%
	height 195px
