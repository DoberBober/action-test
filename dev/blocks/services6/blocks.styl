.services6__list
	display grid
	grid-template-columns 1fr
	grid-gap 20px
	@media(min-width desktop)
		grid-template-columns 1fr 1fr 1fr

.services6__item
	position relative
	min-height 186px
	background #F4F4F4
	display flex
	@media(min-width desktop)
		min-height 230px

.services6__itemInfo
	background rgba(0, 0, 0, 0.4)
	padding 16px 16px 20px
	display flex
	flex-direction column
	justify-content space-between
	align-items flex-start
	z-index 1
	position relative
	width 100%
	@media(min-width desktop)
		padding 20px 20px 24px

.services6__itemImg.invisible + .services6__itemInfo
	background none

	.services6__itemName
		color #000

	.services6__itemLink
		color #000
		border-color #000

		&:hover
			background #000
			color #fff

.services6__itemImg
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	display block
	object-fit cover

.services6__itemName
	margin 0
	color #fff

.services6__itemLink
	display table
	margin-top 40px
	padding 9px 23px
	color #fff
	border 1px solid #fff
	margin-top 40px
	border-radius 60px
	transition 0.3s
	text-decoration none
	@media(min-width desktop)
		margin-top 48px

	&:hover
		background #fff
		color mainText

@media(min-width desktop)
	.services6__itemLink
		display block
		max-height 0
		padding-top 0
		padding-bottom 0
		margin-top 0
		overflow hidden
		opacity 0

	.services6__item:hover
		.services6__itemLink
			margin-top 48px
			padding-top 9px
			padding-bottom 9px
			max-height 100px
			opacity 1
