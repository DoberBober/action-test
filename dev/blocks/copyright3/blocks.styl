.copyright3__container
	padding 32px 24px 28px
	background #000
	color #fff
	border-radius 20px 20px 0px 0px

	@media(min-width desktop)
		padding-top 36px
		padding-bottom 36px

.copyright3__container
	@media(min-width desktop)
		display flex
		align-items center
		justify-content space-between

.copyright3__litepage, .copyright3__cta
	color #fff

.copyright3__litepage
	display flex
	align-items center
	width 190px

.copyright3__litepageIcon
	margin-right 12px

	@media(min-width desktop)
		margin-right 16px

	svg
		display block
		width 36px
		height 36px

.copyright3__cta
	text-decoration none
	border 1px solid #fff
	display block
	padding 0
	text-align center
	transition 0.3s
	padding 9px
	border-radius 60px
	margin-top 32px

	@media(min-width desktop)
		padding 10px
		width auto
		min-width 139px
		margin-top 0
		margin-left 32px

	&:hover
		background #fff
		color #000

.footer2 + .copyright3
	margin-top -28px

.footer3 + .copyright3
	margin-top -28px

.footer4 + .copyright3
	margin-top -28px
