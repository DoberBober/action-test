.advantages2__item
	display flex
	flex-direction column
	border-bottom 1px solid currentColor
	padding-bottom 24px

	@media(min-width tablet)
		border-bottom none
		padding-bottom 0

	& + &
		margin-top 24px

		@media(min-width tablet)
			margin-top 15px

		@media(min-width desktop)
			margin-top 20px

.advantages2__imgWrapper
	order -1
	margin-bottom 16px

	@media(min-width tablet)
		margin-bottom 0

.advantages2__img, .advantages2__video
	display block
	object-fit cover
	width 100%
	height 195px

	@media(min-width tablet)
		width 279px
		height 175px

	@media(min-width desktop)
		width 386px
		height 281px

.advantages2__name
	margin 0 0 12px

	@media(min-width tablet)
		margin-bottom 8px

	@media(min-width desktop)
		margin-bottom 12px
		max-width 576px

.advantages2__text
	margin 0
	max-width 576px

	@media(min-width desktop)
		max-width 472px

@media(min-width tablet)
	.advantages2__item
		display grid
		grid-template-columns 279px 1fr
		grid-column-gap 16px

		&::before
			display block
			content ''
			grid-column 2/3
			height 1px
			background currentColor
			margin-bottom 12px
			margin-top 1px

	.advantages2__imgWrapper
		grid-column 1/2
		grid-row 1/5

	.advantages2__name, .advantages2__text
		grid-column 2/3

@media(min-width desktop)
	.advantages2__item
		grid-template-columns 386px 1fr
		grid-column-gap 30px

		&::before
			margin-bottom 20px

.advantages2__link
	text-decoration none
	border 1px solid mainText
	color mainText
	border-radius 60px
	padding 9px 25px
	display table
	transition 0.3s
	margin-top 24px

	@media(min-width tablet)
		margin-top 48px
		margin-left auto
		margin-right auto

	@media(min-width desktop)
		margin-top 60px

	&:hover
		background mainText
		color main
