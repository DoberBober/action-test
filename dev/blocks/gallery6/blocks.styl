.gallery6__gutter-sizer
	display none

.gallery6__images
	width 320px
	margin-left auto
	margin-right auto
	display flex
	flex-wrap wrap
	margin-bottom -16px
	@media(min-width tablet)
		width 671px
	@media(min-width 1264px)
		width 1200px
		margin-bottom -24px

.gallery6__image
	width 152px
	height 152px
	overflow hidden
	margin-left 16px
	margin-bottom 16px

	&:hover
		cursor pointer

	@media(max-width tablet - 1px)
		&:nth-of-type(6n+1)
			margin-left 0
		&:nth-of-type(6n+3)
			margin-left 168px
		&:nth-of-type(6n+4)
			margin-left 0
		&:nth-of-type(6n+6)
			margin-left 0
			margin-right 168px

	@media(min-width tablet) and (max-width 1263px)
		width 213px
		height 213px
		&:nth-of-type(14n+1)
			margin-left 0
		&:nth-of-type(14n+4)
			margin-left 458px
		&:nth-of-type(14n+5)
			margin-left 229px
			margin-right 229px
		&:nth-of-type(14n+6)
			margin-left 0
		&:nth-of-type(14n+7)
			margin-left 245px
		&:nth-of-type(14n+8)
			margin-left 0
		&:nth-of-type(14n+9)
			margin-right 229px
		&:nth-of-type(14n+10)
			margin-left 458px
		&:nth-of-type(14n+11)
			margin-left 229px
		&:nth-of-type(14n+13)
			margin-left 0
		&:nth-of-type(14n+14)
			margin-left 245px

	@media(min-width 1264px)
		margin-left 24px
		margin-bottom 24px
		width 180px
		height 180px
		&:nth-of-type(14n+1)
			margin-left 0
		&:nth-of-type(14n+2)
			margin-left 636px
		&:nth-of-type(14n+4)
			margin-left 204px
		&:nth-of-type(14n+6)
			margin-left 432px
		&:nth-of-type(14n+7)
			margin-left 612px
		&:nth-of-type(14n+8)
			margin-right 204px
		&:nth-of-type(14n+9)
			margin-left 0
		&:nth-of-type(14n+11)
			margin-left 432px
		&:nth-of-type(14n+13)
			margin-left 408px
		&:nth-of-type(14n+14)
			margin-right 408px

.gallery6__photo, .gallery6__video
	width 100%
	height 100%
	overflow hidden
	object-fit cover

.gallery6__modal
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	background #fff
	z-index 100

.gallery6__modalClose
	position absolute
	border none
	cursor pointer
	right 20px
	top 16px
	width 48px
	height 48px
	border-radius 100%
	display flex
	align-items center
	justify-content center
	background #FAFAFA
	background-image url("data:image/svg+xml,%3Csvg width='48' height='48' viewBox='0 0 48 48' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='24' cy='24' r='23.5' fill='white' stroke='black'/%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M17.4375 16.5L16.5 17.4375L23.0625 23.9999L16.5 30.5625L17.4375 31.5L24 24.9376L30.5624 31.5L31.5001 30.5625L24.9375 23.9999L31.5001 17.4375L30.5624 16.5L24 23.0625L17.4375 16.5Z' fill='black'/%3E%3C/svg%3E%0A")
	background-position center center
	background-repeat no-repeat
	@media(min-width desktop)
		right 16px

.gallery6__modalContainer
	position relative
	width 100%
	height 100%
	margin-left auto
	margin-right auto
	display flex
	flex-direction column
	align-items center
	overflow-y auto

.gallery6__modalActiveElement
	max-width 100%
	max-height 100%
	overflow hidden
	flex-shrink 0

	&:only-child
		margin auto

	& + &
		margin-top 12px

		@media(min-width desktop)
			margin-top 20px

@media(min-width 1264px)
	.gallery6__image
		transition 0.3s
		position relative
		overflow visible
		display grid

		& > *
			grid-column 1/2
			grid-row 1/2

	.gallery6--mouseActive
		.gallery6__image:not(.gallery6__image--hover)
			opacity 0.2

	.gallery6__photoClone
		max-width 100vw
		max-height 100vh
		width 100%
		height 100%
		object-fit cover
		position absolute
		transition 0.5s

	.gallery6__photo
		opacity 0

	.gallery6__image--hover
		z-index 1
