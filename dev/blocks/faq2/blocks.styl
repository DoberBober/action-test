.faq2__list
	margin 0
	padding 0
	list-style none

.faq2__item
	border-top 1px solid
	padding 16px 0 20px
	@media(min-width desktop)
		padding 20px 0 24px

	&:first-child
		border-top none
		padding-top 0

	@media(max-width desktop - 1px)
		&:last-child
			padding-bottom 0

.faq2__question
	margin 0 0 8px
	@media(min-width desktop)
		margin-bottom 12px

.faq2__questionBtn
	width 100%
	text-align left
	padding 0
	border none
	background none
	display flex
	justify-content space-between
	align-items center

.faq2__answer
	max-width 472px

	p
		margin 0

@media(min-width desktop)
	.faq2__container
		display grid
		grid-template-columns 1fr 1fr
		grid-column-gap 48px

	.faq2__heading
		grid-column 1/3

	.faq2__desc
		grid-column 1/2

	.faq2__list, .faq2__link
		grid-column 2/3

	.faq2__link
		justify-self start

	.faq2__item:first-of-type
		border-top none
		padding-top 0

.faq2__link
	text-decoration none
	border 1px solid mainText
	color mainText
	border-radius 60px
	padding 9px 25px
	display table
	transition 0.3s
	margin-top 24px

	@media(min-width desktop)
		margin-top 40px

	&:hover
		background mainText
		color main
