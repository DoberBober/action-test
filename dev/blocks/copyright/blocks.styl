.copyright
	padding-top 32px
	padding-bottom 28px
	border-top 1px solid #000
	background #fff

	@media(min-width desktop)
		padding-top 40px
		padding-bottom 40px

.copyright__container
	@media(min-width desktop)
		display flex
		align-items center
		justify-content center

.copyright__litepage, .copyright__cta
	color #000

.copyright__litepage
	display flex
	align-items center
	width 190px

.copyright__litepageIcon
	margin-right 12px

	svg
		display block
		width 36px
		height 36px

.copyright__cta
	text-decoration none
	border 1px solid #000
	display block
	padding 0
	text-align center
	transition 0.3s
	padding 9px
	border-radius 60px
	margin-top 32px

	@media(min-width desktop)
		padding 10px
		width auto
		min-width 139px
		margin-top 0
		margin-left 32px

	&:hover
		background #000
		color #fff

.footer2 + .copyright
	margin-top -28px
	@media(min-width desktop)
		margin-top -36px

.footer3 + .copyright
	margin-top -28px
	@media(min-width desktop)
		margin-top -20px

.footer4 + .copyright
	margin-top -28px
	@media(min-width desktop)
		margin-top -74px
