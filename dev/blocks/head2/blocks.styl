.head2
	position relative
	min-height var(--app-height, 100vh)
	display flex
	align-items end
	padding 44px 0
	margin-bottom 60px
	background-color #000 !important
	@media(min-width desktop)
		align-items center
		padding-top 124px
		padding-bottom 124px
		margin-bottom 110px

.constructorActive
	.head2
		margin-bottom 0

.head2__container
	&::before
		content ''
		z-index 1
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		background linear-gradient(0deg, rgba(0, 0, 0, 0.28), rgba(0, 0, 0, 0.28))

.head2__img, .head2__video
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	object-fit cover

.head2__heading, .head2__text, .head2__buttons
	position relative
	z-index 1

.head2__heading, .head2__heading span, .head2__text, .head2__text p
	color white !important

.head2__heading
	margin 0 -6px 12px
	@media(min-width desktop)
		margin 0 -22px 0

.head2__text
	margin-bottom 24px
	@media(min-width desktop)
		margin-bottom 40px

.head2__text, .head2__buttons
	margin-left 58px
	max-width 258px
	@media(min-width desktop)
		max-width 472px
		margin-left 0

.head2__button
	display table
	text-decoration none
	color white !important
	border 1px solid white
	border-radius 60px
	padding 9px 23px
	transition 0.3s

	&:hover
		background #fff
		color #000 !important

@media(min-width desktop)
	.head2__container
		display grid
		grid-template-columns 52fr 48fr

	.head2__heading
		grid-column 1/3

	.head2__text, .head2__buttons
		grid-column 2/3

	.head2__heading
		&.heading--size-2, &.heading--size-3, &.heading--size-4, &.heading--size-5, &.heading--size-6, &.heading--size-7, &.heading--size-8, &.heading--size-9
			margin-bottom 20px
