.rates__checkers
	margin-bottom 28px

	@media(min-width tablet)
		margin-bottom 40px

.rates__checker
	border none
	padding 0
	background none
	text-align left
	opacity 0.75
	border-bottom 1px solid transparent
	cursor pointer

	& + &
		margin-left 28px

		@media(min-width desktop)
			margin-left 20px

.rates__checker--active
	opacity 1
	border-bottom-color currentColor

.rates__item
	box-shadow inset 0 0 0 1px currentColor
	padding 12px 12px 16px
	margin-left 12px
	width 300px
	display flex
	flex-direction column

	@media(min-width tablet)
		padding 16px 16px 28px
		margin-left 16px
		width 328px

	@media(min-width desktop)
		padding 16px 16px 24px
		margin-left 48px
		width 368px
		width calc((100% - 96px) / 3)

.rates__mainInfo
	display flex
	flex-direction column

.rates__name
	order -2
	margin-bottom 8px

.rates__price
	margin-top 20px
	margin-bottom 2px
	border-top 1px solid currentColor
	padding-top 12px

	@media(min-width tablet)
		margin-top 28px
		margin-bottom 4px

	@media(min-width desktop)
		padding-top 20px

.rates__priceInfo
	order -1
	opacity 0.75

.rates__wrapper
	display flex
	flex-direction column
	margin-top 24px
	border-top 1px solid mainText
	padding-top 24px
	flex-grow 1

	@media(min-width tablet)
		margin-top 28px

	@media(min-width desktop)
		padding-top 28px

.rates__btn
	margin-top 40px
	display block
	padding 9px
	text-align center
	text-decoration none
	border 1px solid mainText
	background transparent
	color mainText
	border-radius 50px
	transition 0.3s

	&:hover
		background mainText
		color main

	@media(min-width desktop)
		margin-top 56px

.rates__points
	order -1
	margin 0
	padding 0
	list-style none
	flex-grow 1

	li
		position relative
		padding-left 9px

		@media(min-width tablet)
			padding-left 13px

		&::before
			content ''
			position absolute
			left 0
			top 6px
			border-radius 100%
			width 3px
			height 3px
			background currentColor

			@media(min-width tablet)
				width 4px
				height 4px

			@media(min-width desktop)
				width 5px
				height 5px


		& + li
			margin-top 8px

			@media(min-width desktop)
				margin-top 12px

@media(min-width desktop)
	.rates__list, .rates__list *
		pointer-events none

	.rates__btn, .flickity-buttons-wrapper, .flickity-buttons-wrapper *
		pointer-events initial
