
.partners__list
	@media(min-width desktop)
		display flex
		flex-wrap wrap

.partners__logoAdminWrapper
	width 150px
	margin-left 12px
	border-top 1px solid mainText
	border-bottom 1px solid mainText
	padding-top 20px
	padding-bottom 20px
	text-align center

	@media(min-width desktop)
		width calc((100% - 144px) / 4)
		margin-left 48px
		padding-top 36px
		padding-bottom 36px

		&:nth-child(-n+4)
			border-bottom none

		&:nth-child(4n+1)
			margin-left 0

.partners__logo, .partners__video
	display block
	margin 0 auto
	object-fit contain
	width 90px
	height 26px

	@media(min-width tablet)
		width 160px
		height 45px
