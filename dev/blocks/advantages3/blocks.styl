.advantages3__mainImgWrapper
	margin-top 40px

.advantages3__mainImg, .advantages3__video
	display block
	object-fit cover
	width 100%
	height 195px

	@media(min-width tablet)
		height 419px

	@media(min-width desktop)
		height 495px
		max-width 793px

.advantages3__item
	& + &
		margin-top 24px

		@media(min-width tablet)
			margin-top 36px

.advantages3__name
	margin 0 0 4px

	@media(min-width tablet)
		margin-bottom 8px

	@media(min-width desktop)
		margin-bottom 0

.advantages3__text
	margin 0
	padding-top 12px
	border-top 1px solid currentColor

	@media(min-width desktop)
		max-width 312px

@media(min-width desktop)
	.advantages3__container
		display grid
		grid-template-columns 368px 1fr
		grid-column-gap 39px

	.advantages3__heading, .advantages3__desc
		grid-column 1/3

	.advantages3__list, .advantages3__link
		grid-column 1/2

	.advantages3__link
		justify-self start

	.advantages3__mainImgWrapper
		align-self start
		margin-top 0
		grid-column 2/3
		grid-row 3/5
		position sticky
		top 0

	.advantages3__text
		border-top none

	.advantages3__item
		border-top 1px solid currentColor
		padding-top 16px

		& + &
			margin-top 52px

	.header--sticky ~ .advantages3
		.advantages3__mainImgWrapper
			top 99px

.advantages3__link
	text-decoration none
	border 1px solid mainText
	color mainText
	border-radius 60px
	padding 9px 25px
	display table
	transition 0.3s
	margin-top 24px

	@media(min-width tablet)
		margin-top 48px

	@media(min-width desktop)
		margin-top 60px

	&:hover
		background mainText
		color main
