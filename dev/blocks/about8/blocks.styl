@media(min-width desktop)
	.about8__container
		display grid
		grid-template-columns 1fr 368px

	.about8__heading
		grid-column 1/3

	.about8__btn, .about8__text
		grid-column 2/3

	.about8__btn
		justify-self start

.about8__heading
	margin-bottom 0
	max-width 932px

	&::after
		display none

.about8__text
	margin-top 40px
	max-width 368px
	color mainText
	@media(min-width desktop)
		margin-top 92px

.about8__btn
	text-decoration none
	border 1px solid mainText
	color mainText
	border-radius 60px
	padding 9px 23px
	display table
	transition 0.3s
	margin-top 24px
	@media(min-width desktop)
		margin-top 40px

	&:hover
		background mainText
		color main

.about8__heading:empty + .about8__text
	margin-top 0

.about8__container--withoutText
	.about8__text
		display none

	.about8__btn
		grid-column 1/2

.section--third.about8
	.about8__text
		color main3Text

	.about8__btn
		border 1px solid main3Text
		color main3Text

		&:hover
			background main3Text
			color main3
