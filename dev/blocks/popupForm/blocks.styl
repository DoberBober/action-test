.popupForm
	position fixed
	left 50%
	top 50%
	transform translate(-50%, -50%)
	height var(--app-height, 100vh)
	width 100%
	overflow-y auto
	background main2
	color main2Text
	padding 60px 24px
	flex-direction column
	justify-content center

	@media(min-width tablet)
		max-width 672px
		height auto
		max-height 90vh
		padding 24px 20px 30px

	@media(min-width desktop)
		max-width 630px
		padding 28px 28px 32px

.popupForm__heading
	margin 0 0 12px
	padding-right 40px

.popupForm__text
	p
		margin 0

.popupForm__form
	margin-top 32px

	@media(min-width tablet)
		margin-top 26px

	@media(min-width desktop)
		margin-top 30px

.popupForm__formBlock
	margin-bottom 16px

	@media(min-width tablet)
		margin-bottom 18px

	@media(min-width desktop)
		margin-bottom 26px

.popupForm__submit
	border 1px solid main2BtnText
	background main2
	color main2BtnText
	text-align center
	border-radius 60px
	padding 9px 23px
	margin-top 24px
	cursor pointer

	@media(min-width tablet)
		margin-right 26px

	@media(min-width desktop)
		margin-right 16px

.popupForm__note
	margin-top 12px

	@media(min-width tablet)
		margin-top 0

.popupForm__input
	border none
	border-bottom 1px solid main2Text
	color main2Text
	padding 8px 0
	display block
	width 100%

	@media(min-width tablet)
		padding 10px 0

	&::placeholder
		opacity 1
		color main2Text

@media(min-width tablet)
	.popupForm__form
		display grid
		grid-template-columns 144px 143px 1fr
		align-items baseline

	.popupForm__submit
		grid-column 1/3

	.popupForm__note
		margin-top 10px
		grid-column 1/4

	.popupForm__formBlock:nth-child(odd)
		grid-column 1/3

	.popupForm__formBlock:nth-child(even)
		grid-column 3/4
		margin-left 47px

@media(min-width desktop)
	.popupForm__formBlock:nth-child(even)
		margin-left 21px

.popupForm__successText
	display none

.popupForm--success
	@media(min-width tablet)
		padding 120px 127px 140px

	@media(min-width desktop)
		padding 143px 93px

	.popupForm__heading, .popupForm__text, .popupForm__form
		display none

	.popupForm__successText
		display flex

.popupForm__successText
	text-align center
	max-width 300px
	margin-left auto
	margin-right auto
	flex-direction column

	@media(min-width tablet)
		max-width 100%
		text-align left
		align-items center
		flex-direction row

	svg
		display table
		margin 0 auto 20px

		@media(min-width tablet)
			margin 0 20px 0 0

	p
		margin 0
