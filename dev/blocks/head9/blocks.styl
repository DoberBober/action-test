.head9
	background main

	*
		color mainText

.head9__heading
	margin 0

	@media(min-width desktop)
		margin-bottom 56px

.head9__heading:not(:empty) + .head9__text
	margin-top 20px

	@media(min-width tablet)
		margin-top 24px

	@media(min-width desktop)
		margin-top 0

.head9__buttons
	margin-top 24px

	@media(min-width tablet)
		margin-top 32px

	@media(min-width desktop)
		margin-top 40px

.head9__button
	display table
	padding 9px 23px
	border 1px solid currentColor
	border-radius 60px
	text-decoration none
	transition 0.3s

	&:hover
		background mainText
		color main

.head9__imgWrapper
	margin-top 40px

	@media(min-width tablet)
		margin-top 64px

	@media(min-width desktop)
		margin-top 0
		min-height 400px

.head9__img, .head9__video
	display block
	object-fit cover
	width 100%
	height 100%

@media(min-width desktop)
	.head9__container
		display grid
		grid-template-columns 368px 1fr
		grid-template-rows min-content min-content min-content min-content
		grid-column-gap 48px

	.head9__heading
		grid-column 1/3
		grid-row 1/2

	.head9__text
		grid-column 1/2
		grid-row 2/3

	.head9__buttons
		grid-column 1/2
		grid-row 3/4

	.head9__imgWrapper
		grid-column 2/3
		grid-row 2/5
