.cta4
	background main2
	color main2Text

	*
		color main2Text

.cta4__container
	@media(min-width desktop)
		display grid
		grid-template-columns 1fr 1fr
		grid-column-gap 48px

.cta4__heading
	margin 0

	@media(min-width desktop)
		grid-column 1/2
		grid-row 1/3

.cta4__desc
	margin-top 12px

	@media(min-width desktop)
		margin-top 0
		grid-column 2/3

.cta4__form
	margin-top 26px

	@media(min-width desktop)
		margin-top 40px
		grid-column 2/3
		display flex

.cta4__inputWrapper
	display block
	width 100%

.cta4__input
	display block
	width 100%
	padding 12px 0
	border none
	border-bottom 1px solid main2Text

	@media(min-width desktop)
		padding 10px 0

	&::placeholder
		opacity 1
		color main2Text

.cta4__submit
	border 1px solid main2Text
	margin-top 24px
	flex-shrink 0
	border-radius 60px
	padding 9px 23px
	cursor pointer
	transition 0.3s

	@media(min-width desktop)
		margin-top 0
		margin-left 12px
		max-width 50%

	&:hover
		background main2Text
		color main2
