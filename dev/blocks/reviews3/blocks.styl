.reviews3__list
	@media(min-width desktop)
		display grid
		grid-template-columns 1fr 1fr
		grid-gap 20px

.reviews3__item
	background #F3F3F3
	color #000
	padding 16px 16px 20px
	display flex
	flex-direction column-reverse
	justify-content space-between
	@media(max-width desktop - 1px)
		width 312px

		& + &
			margin-left 20px

	@media(min-width desktop)
		padding 20px 32px 24px 20px

.reviews3__text
	margin-top 40px
	@media(min-width desktop)
		margin-top 56px

.reviews3__info
	display flex
	align-items center

.reviews3__avatar
	width 42px
	height 42px
	flex-shrink 0
	margin-right 12px
	@media(min-width desktop)
		width 48px
		height 48px

.reviews3__photo, .reviews3__video
	display block
	width 100%
	height 100%
	object-fit cover

.reviews3__post
	margin-top 2px
	@media(min-width desktop)
		margin-top 4px

.reviews3__item--withoutImg
	.reviews3__avatar
		display none

.reviews3
	.slider-custom-dots
		margin-top 32px

.reviews3__text, .reviews3__name, .reviews3__post
	color mainText

.section--third.reviews3
	.reviews3__text, .reviews3__name, .reviews3__post
		color main3Text
