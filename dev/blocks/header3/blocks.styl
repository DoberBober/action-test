.header3
	padding-top 24px
	padding-bottom 24px
	background header
	position absolute
	left 0
	top 0
	width 100%
	border-bottom 1px solid headerText

	@media(min-width desktop)
		padding-top 20px
		padding-bottom 20px

.header3__container
	display flex
	align-items center

.header3__logo,
.mainMenu3__logo
	color headerText
	text-decoration none

	@media(min-width desktop)
		margin-right 32px

	img
		display block
		object-fit contain
		object-position left center
		width 135px
		height 24px

		@media(min-width desktop)
			width 180px
			height 32px

.mainMenu3__logo
	color black

.mainMenu3__header
	display flex
	justify-content space-between
	align-items center

.header3__menuChecker
	width 18px
	height 10px
	border none
	padding 0
	background none
	position relative

	&::before, &::after
		content ''
		position absolute
		left 0
		width 100%
		height 2px

	&--open
		margin-left auto

		&::before, &::after
			background headerText

		&::before
			top 0

		&::after
			bottom 0


	&--close
		&::before, &::after
			background black

		&::before
			transform rotate(45deg)

		&::after
			transform rotate(-45deg)

.mainMenu3
	@media(max-width upToDesktop)
		display none

		&--active
			z-index 1
			background white
			display flex
			flex-direction column
			position fixed
			left 0
			top 0
			width 100%
			height var(--app-height, 100vh)
			padding 20px 24px 0

			@media(min-width tablet)
				padding-top 28px


	@media(min-width desktop)
		margin-left auto
		flex-shrink 0
		max-width 50%

.mainMenu3__header
	padding-bottom 24px
	background white

.mainMenu3__btn
	border 1px solid currentColor
	border-radius 60px
	color black
	text-decoration none
	display block
	text-align center
	padding 9px
	margin-top auto
	margin-bottom 24px
	flex-shrink 0

	@media(min-width desktop)
		color headerText
		display table
		margin-left auto
		margin-top 0
		margin-bottom 0
		padding-left 24px
		padding-right 24px
		max-width 100%
		transition 0.3s

		&:hover
			border-color headerText
			background headerText
			color header
