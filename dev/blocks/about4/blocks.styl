.about4__container
	display flex
	flex-direction column
	align-items start

.about4__heading
	order -2

.about4__text
	margin-bottom 24px

	@media(min-width tablet)
		margin-bottom 28px

	@media(min-width desktop)
		margin-bottom 40px

.about4__btn
	text-decoration none
	border 1px solid mainText
	color mainText
	border-radius 60px
	padding 9px 25px
	display table
	transition 0.3s

	&:hover
		background mainText
		color main

.about4__img, .about4__video
	display block
	object-fit cover
	height 195px
	width 100%
	order -1
	margin-bottom 12px

	@media(min-width tablet)
		height 420px
		margin-bottom 16px

	@media(min-width desktop)
		height 495px
		max-width 793px
		margin-bottom 0

@media(min-width desktop)
	.about4__container
		display grid
		grid-template-columns 1fr 368px
		grid-template-rows min-content min-content min-content min-content
		grid-column-gap 40px

	.about4__heading
		grid-column 1/3

	.about4__img, .about4__video
		grid-column 1/2
		grid-row 2/5

	.about4__text, .about4__btn
		grid-column 2/3
		justify-self start
