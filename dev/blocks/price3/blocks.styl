.price3__container
	display flex
	flex-direction column

.price3__heading
	order -3

.price3__desc
	order -2
	margin-bottom 0

.price3__btn
	order -1
	align-self start

.price3__desc
	max-width 576px

.price3__list
	margin-top 40px
	margin-bottom -20px

	@media(min-width desktop)
		margin-bottom -48px
		margin-top 100px
		display flex
		flex-wrap wrap

.price3__item
	margin-bottom 20px
	padding 16px
	background #F3F3F3

	@media(min-width desktop)
		margin-bottom 48px
		padding 20px 20px 16px
		width calc((100% - 48px) / 2)

		&:nth-child(even)
			margin-left 48px

.price3__itemHeading
	margin 0

.price3__itemDesc
	margin-top 10px

	@media(min-width desktop)
		margin-top 0

.price3__itemPrice
	margin-top 56px
	padding-top 12px
	border-top 1px solid currentColor
	display table
	min-width 43%
	margin-left auto

	@media(min-width desktop)
		padding-top 16px

.price3__btn
	display table
	margin-top 24px
	border 1px solid currentColor
	border-radius 60px
	text-decoration none
	padding 9px 22px
	transition 0.3s
	color mainText

	@media(min-width desktop)
		padding 9px 23px
		margin-top 40px

	&:hover
		background mainText
		color main


@media(min-width desktop)
	.price3__item
		display grid
		grid-template-columns 1fr 1fr
		grid-template-rows min-content 1fr min-content
		grid-column-gap 16px

	.price3__itemHeading
		grid-column 1/2

	.price3__itemDesc
		grid-column 2/3

	.price3__itemPrice
		width 100%
		grid-column 2/3
		grid-row 3/4

	.price3__itemHeading:empty + .price3__itemDesc,
	.price3__itemHeading--fullWidth
		grid-column 1/3
		max-width 396px
