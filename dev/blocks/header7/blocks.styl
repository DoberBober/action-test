.header7
	padding-top 25px
	padding-bottom 26px
	background header
	position absolute
	left 0
	top 0
	width 100%
	border-bottom 1px solid headerText

	@media(min-width desktop)
		padding-top 24px
		padding-bottom 24px

.header7__container
	display flex
	align-items center

.header7__logo,
.mainMenu7__logo
	color headerText
	text-decoration none

	img
		display block
		object-fit contain
		object-position left center
		width 135px
		height 24px

		@media(min-width desktop)
			object-position center center
			width 180px
			height 32px

.mainMenu7__logo
	color black

.mainMenu7__header
	display flex
	justify-content space-between
	align-items center

.header7__menuChecker
	width 18px
	height 10px
	border none
	padding 0
	background none
	position relative

	&::before, &::after
		content ''
		position absolute
		left 0
		width 100%
		height 2px

	&--open
		margin-left auto

		&::before, &::after
			background headerText

		&::before
			top 0

		&::after
			bottom 0


	&--close
		&::before, &::after
			background black

		&::before
			transform rotate(45deg)

		&::after
			transform rotate(-45deg)

.mainMenu7__list
	margin 0
	padding 0
	list-style none

	@media(max-width upToDesktop)
		margin-top auto
		overflow-y auto
		padding-bottom 32px
		-ms-overflow-style none
		scrollbar-width none

		&::-webkit-scrollbar
			display none

	@media(min-width desktop)
		display flex
		flex-wrap wrap

.mainMenu7__item
	@media(max-width upToDesktop)
		margin-top 20px

		&:first-child
			margin-top 0

	@media(min-width tablet) and (max-width upToDesktop)
		margin-top 24px

		&:first-child
			margin-top 0

	@media(min-width desktop)
		margin-left 24px

		&:first-child
			margin-left 0


.mainMenu7__link
	color headerText
	text-decoration none

	@media(max-width upToDesktop)
		color black

.header7__firstPartMenu, .mainMenu7
	flex-shrink 0

.mainMenu7
	@media(max-width upToDesktop)
		display none

		&--active
			z-index 1
			background white
			display flex
			flex-direction column
			position fixed
			left 0
			top 0
			width 100%
			height var(--app-height, 100vh)
			padding 20px 24px 0

			@media(min-width tablet)
				padding-top 28px

.mainMenu7__header
	padding-bottom 24px
	background white

@media(min-width desktop)
	.header7__container
		display grid
		grid-template-columns 1fr 1fr 1fr

	.mainMenu7__list
		justify-content flex-end

	.mainMenu7__list--firstPart
		justify-content flex-start

	.mainMenu7__list--firstPart
		.mainMenu7__item
			margin-left 0
			margin-right 24px

	.header7__logo
		text-align center

		img
			margin-left auto
			margin-right auto
