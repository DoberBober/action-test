.cases6__item
	width 312px
	margin-right 12px
	position relative
	overflow hidden
	@media(min-width tablet)
		width 100%
		display flex
		margin-right 16px
	@media(min-width tablet)
		margin-right 0

	& + &
		@media(min-width desktop)
			margin-top 20px

.cases6__imgWrapper
	width 100%
	height 194px
	margin-bottom 16px
	@media(min-width tablet)
		width 328px
		height 205px
		margin-right 16px
		margin-bottom 0
	@media(min-width desktop)
		width 386px
		height 241px
		margin-right 30px

.cases6__img
	display block
	width 100%
	height 100%
	object-fit cover

.cases6__body
	@media(min-width desktop)
		border-top 1px solid currentColor
		flex-grow 1
		padding-right 42px

		&::before
			content ''
			position absolute
			right 0
			top 20px
			width 22px
			height 22px
			background-image url("data:image/svg+xml,%3Csvg width='22' height='22' viewBox='0 0 22 22' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1H21V21M20.5 1.5L1 21' stroke='black' stroke-linecap='square' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
			background-size 100% 100%
			transition 0.2s

.cases6__title
	margin 0 0 8px
	padding-right 42px
	position relative
	@media(min-width tablet) and (max-width upToDesktop)
		border-top 1px solid #000
		padding-top 12px
	@media(min-width desktop)
		margin-bottom 12px
		padding-top 20px

	&::before
		content ''
		position absolute
		right 0
		top 0
		width 16px
		height 16px
		background-image url("data:image/svg+xml,%3Csvg width='22' height='22' viewBox='0 0 22 22' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1H21V21M20.5 1.5L1 21' stroke='black' stroke-linecap='square' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
		background-size 100% 100%
		@media(min-width tablet)
			width 10px
			height 10px
			top 14px
		@media(min-width desktop)
			display none

.cases6__title, .cases6__desc
	max-width 576px
	@media(min-width tablet)
		padding-right 30px
	@media(min-width desktop)
		padding-right 0

.cases6__link
	position absolute
	right 0
	bottom 0
	width 100vw
	height 100vh

.cases6
	.flickity-buttons-wrapper
		margin-top 32px
		@media(min-width desktop)
			display none

@media(min-width desktop)
	.cases6__item:hover
		.cases6__body::before
			transform scale(.75) rotate(45deg)

