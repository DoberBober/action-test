	.services2__body
		display grid
		grid-template-columns 66% 1fr
		grid-template-rows min-content min-content
		grid-column-gap 40px
		min-height 495px

	.services2__list
		grid-column 1/3
		position relative
		display grid
		grid-template-columns 66% 1fr
		grid-column-gap 40px
		align-content start

	.services2__link
		justify-self start
		grid-column 2/3

	.services2__item
		border-top 1px solid mainText
		grid-column 2/3

		&:last-child
			border-bottom 1px solid mainText

