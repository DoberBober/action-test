		top 0
		grid-column 1/2
		height 495px

.services2__itemImg
	display block
	object-fit cover
	width 100%
	height 100%

.services2__itemText
	margin-top 16px
	@media(min-width desktop)
		margin-top 0
		grid-column 2/3

.services2__itemName
	margin 0
	color mainText
	@media(min-width desktop)
		position relative
		padding-right 30px
		cursor pointer

		&::before, &::after
			content ''
			position absolute
			right 0
			top 11px
			width 16px
			height 1px
			background currentColor
			transition 0.3s

		&::after
			transform rotate(90deg)

		&:hover
			&::before
				transform rotate(45deg)

			&::after
				transform rotate(135deg)

.services2__itemDesc
	margin-top 8px
	color mainText
	@media(min-width desktop)
		margin-top 12px
		padding-bottom 4px
		display none

@media(max-width desktop - 1px)
	.services2__item
		width 312px

		& + &
			margin-left 24px

@media(min-width desktop)
	.services2__itemImgWrapper
		transition 0.3s
		opacity 0

	.services2__item--active
		.services2__itemImgWrapper
			opacity 1

		.services2__itemDesc
			display block

		.services2__itemName
			&::before
				transform rotate(45deg)

			&::after
				transform rotate(135deg)

.services2__link
	display table
	padding 7px 14px
	color mainText
	background main
	border 1px solid mainText
	margin-top 40px
	border-radius 60px
	transition 0.3s
	text-decoration none

	&:hover
		background mainText
		color main


.services2.section--third
	.services2__item
		border-color main3Text

	.services2__itemName, .services2__itemDesc
		color main3Text

	.services2__link
		border-color main3Text
		background main3
		color main3Text

		&:hover
			background main3Text
			color main3
