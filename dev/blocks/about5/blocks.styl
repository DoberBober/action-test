.about5__btn
	text-decoration none
	border 1px solid mainText
	color mainText
	border-radius 60px
	padding 9px 25px
	display table
	transition 0.3s
	margin-top 24px

	@media(min-width tablet)
		margin-top 28px

	@media(min-width desktop)
		margin-top 40px

	&:hover
		background mainText
		color main

.about5__container
	display flex
	flex-direction column
	align-items flex-start

.about5__heading
	order -3

.about5__img, .about5__video
	order -2

.about5__notation
	order -1

.about5__img, .about5__video
	display block
	margin-bottom 12px
	object-fit cover
	height 195px
	width 100%

	@media(min-width tablet)
		margin-bottom 16px
		height 419px

	@media(min-width desktop)
		margin-bottom 20px
		height 748px

.about5__text, .about5__notation
	max-width 443px

.about5__notation
	margin-bottom 20px

	@media(min-width tablet)
		margin-bottom 24px

	@media(min-width desktop)
		margin-bottom 0
		max-width 368px

.about5__text
	margin-bottom 0

	@media(min-width desktop)
		max-width 576px

@media(min-width desktop)
	.about5__container
		display grid
		grid-template-columns 368px 576px
		justify-content space-between

	.about5__heading, .about5__img, .about5__video
		grid-column 1/3

	.about5__notation
		grid-column 1/2

	.about5__text, .about5__btn
		grid-column 2/3
		justify-self start

	.about5__container--oneColumn
		grid-template-columns 576px 368px

		.about5__text, .about5__btn
			grid-column 1/2
			justify-self start
