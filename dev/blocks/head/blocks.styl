.head
	display flex
	background main
	padding-top 64px
	padding-bottom 60px
	@media(min-width desktop)
		// min-height var(--app-height, 100vh)
		padding-top 220px
		padding-bottom 110px

.head__container
	display flex
	flex-direction column
	width 360px

	@media(min-width desktop)
		width 100%

.head__img, .head__video
	display block
	margin-top auto
	object-fit cover
	width 312px
	height 200px
	order -1
	margin-bottom 32px

	@media(min-width desktop)
		width 784px
		height 492px
		margin-bottom 0

.head__heading, .head__heading span
	color mainText

.head__heading
	margin 0 -6px 12px
	@media(min-width desktop)
		margin 0 -22px -10px

.head__text, .head__text p
	color mainText

.head__text
	margin-bottom 24px
	@media(min-width desktop)
		margin-bottom 40px

.head__buttons
	display flex
	flex-wrap wrap
	gap 12px
	@media(min-width desktop)
		gap 16px

.head__button
	border 1px solid currentColor
	background main
	border-radius 60px
	text-decoration none
	display table
	padding 9px 23px
	transition 0.3s
	color mainText

	&:hover
		border-color mainText
		background mainText
		color main

@media(min-width desktop)
	.head__container
		display grid
		align-items start
		grid-template-columns 368px 1fr
		grid-template-rows min-content min-content min-content 1fr
		grid-column-gap 48px

	.head__heading
		grid-column 1/3
		grid-row 1/2

	.head__text
		grid-column 1/2
		grid-row 2/3

	.head__buttons
		grid-column 1/2
		grid-row 3/4

	.head__img, .head__video
		grid-column 2/3
		grid-row 2/5

	.head__heading
		&.heading--size-2
			margin-bottom 20px
		&.heading--size-3
			margin-bottom 32px
		&.heading--size-4
			margin-bottom 20px
		&.heading--size-5
			margin-bottom 32px
		&.heading--size-6
			margin-bottom 32px
		&.heading--size-7
			margin-bottom 32px
		&.heading--size-8
			margin-bottom 32px
		&.heading--size-9
			margin-bottom 32px
