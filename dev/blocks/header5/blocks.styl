.header5
	padding-top 24px
	padding-bottom 24px
	background header
	position absolute
	left 0
	top 0
	width 100%
	border-bottom 1px solid headerText

	@media(min-width tablet)
		padding-top 20px
		padding-bottom 20px

	@media(min-width desktop)
		padding-top 16px
		padding-bottom 16px

.header5__container
	display flex
	align-items center

.header5__logo,
.mainMenu5__logo
	color headerText
	text-decoration none

	img
		display block
		object-fit contain
		object-position left center
		width 135px
		height 24px

		@media(min-width desktop)
			width 180px
			height 32px

.mainMenu5__logo
	color black

.mainMenu5__header
	display flex
	justify-content space-between
	align-items center

.header5__menuChecker
	width 18px
	height 10px
	border none
	padding 0
	background none
	position relative

	&::before, &::after
		content ''
		position absolute
		left 0
		width 100%
		height 2px

	&--open
		margin-left auto

		&::before, &::after
			background headerText

		&::before
			top 0

		&::after
			bottom 0


	&--close
		&::before, &::after
			background black

		&::before
			transform rotate(45deg)

		&::after
			transform rotate(-45deg)

.mainMenu5__list
	margin 0
	padding 0
	list-style none

	@media(max-width upToDesktop)
		margin-top auto
		overflow-y auto
		-ms-overflow-style none
		scrollbar-width none

		&::-webkit-scrollbar
			display none

	@media(min-width desktop)
		display flex
		flex-wrap wrap
		margin-left auto
		margin-right auto
		padding-left 40px
		padding-right 40px

.mainMenu5__item
	@media(max-width upToDesktop)
		margin-top 20px

		&:first-child
			margin-top 0

	@media(min-width desktop)
		margin-left 24px


.mainMenu5__link
	color headerText
	text-decoration none

	@media(max-width upToDesktop)
		color black

.mainMenu5
	flex-shrink 0

	@media(max-width upToDesktop)
		display none

		&--active
			z-index 1
			background white
			display flex
			flex-direction column
			position fixed
			left 0
			top 0
			width 100%
			height var(--app-height, 100vh)
			padding 20px 24px 0

			@media(min-width tablet)
				padding-top 28px

	@media(min-width desktop)
		display flex
		align-items center
		margin-left auto
		flex-grow 1

.mainMenu5__header
	padding-bottom 24px
	background white

.mainMenu5__btn
	border 1px solid currentColor
	border-radius 60px
	color black
	text-decoration none
	display block
	text-align center
	padding 9px
	margin-top 24px
	margin-bottom 24px
	flex-shrink 0

	@media(min-width tablet) and (max-width upToDesktop)
		margin-top 48px
		margin-bottom 48px

	@media(min-width desktop)
		color headerText
		display table
		margin-top 0
		margin-bottom 0
		padding-left 24px
		padding-right 24px
		transition 0.3s

		&:hover
			background headerText
			color header
