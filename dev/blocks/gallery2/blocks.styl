.gallery2__images
	margin 0
	padding 0
	list-style none

.gallery2__image
	width 100%
	margin-left 20px

	@media(min-width desktop)
		display flex
		flex-wrap wrap
		justify-content space-between

.gallery2__photo, .gallery2__video
	display block
	object-fit cover
	margin-bottom 10px
	width 100%
	height 194px

	@media(min-width tablet)
		margin-bottom 16px
		height 420px

	@media(min-width desktop)
		margin-bottom 24px
		height 750px

.gallery2__name
	margin 0 0 8px

	@media(min-width desktop)
		margin-bottom 0

.gallery2__name, .gallery2__post
	display block
	max-width 443px

	@media(min-width desktop)
		max-width 312px
