.cases3
	overflow hidden

.cases3__item
	width 100%
	border-top 1px solid #000
	padding-top 12px
	position relative
	padding-right 42px
	@media(min-width tablet)
		width 443px
		margin-right 16px
		padding-right 56px
	@media(min-width desktop)
		width 100%
		margin-right 0
		padding-top 16px
		padding-bottom 48px
		padding-right 104px

		&:first-child
			border-top none
			padding-top 0

.cases3__title
	margin 0 0 8px
	@media(min-width desktop)
		max-width 470px

.cases3__desc
	@media(min-width desktop)
		max-width 470px

.cases3__link
	position absolute
	right 0
	top 12px
	width 16px
	height 16px
	background-image url("data:image/svg+xml,%3Csvg width='22' height='22' viewBox='0 0 22 22' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1H21V21M20.5 1.5L1 21' stroke='black' stroke-linecap='square' stroke-linejoin='round'/%3E%3C/svg%3E%0A")
	background-size 100% 100%
	@media(min-width tablet)
		width 10px
		height 10px
	@media(min-width desktop)
		top 16px
		width 22px
		height 22px

@media(max-width upToTablet)
	.cases3
		.flickity-buttons-wrapper
			margin-top 32px

@media(min-width desktop)
	.cases3__container
		display grid
		grid-template-columns 1fr 1fr
		grid-column-gap 49px

	.cases3__heading
		grid-column 1/3

	.cases3__text
		grid-column 1/2

	.cases3__list
		grid-column 2/3

	.cases3
		.flickity-buttons-wrapper
			display none
