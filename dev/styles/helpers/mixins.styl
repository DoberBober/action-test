webfont(name, fileName, weight = normal, style = normal)
	@font-face
		font-family name
		src url('../fonts/' + fileName + '.woff2') format('woff2');
		font-weight weight
		font-style style
		font-display swap

hoverUnderline()
	background linear-gradient(90deg, transparent 0%, transparent 50%, currentColor 50%, currentColor 100%)
	background-size 200% 1px
	background-position right 95%
	background-repeat no-repeat
	text-decoration none
	transition 0.5s

	&:hover, &:focus
		background-position left 95%

hoverWithoutUnderline()
	background linear-gradient(90deg, transparent 0%, transparent 33.3333%, currentColor 33.3333%, currentColor 66.6666%, transparent 66.6666%, transparent 100%)
	background-size 300% 1px
	background-position right 95%
	background-repeat no-repeat
	text-decoration none
	transition 0.5s

	&:hover, &:focus
		background-position left 95%

